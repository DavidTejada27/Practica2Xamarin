<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="practica2Xamarin.loginPage"
            BarBackground="Red">
             
  <!--Pages can be added as references or inline-->
    <ContentPage Title="Login" >
        <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto" ColumnDefinitions="*" VerticalOptions="Center">
            <Image Source="LogoIntec" Grid.Row="1" HorizontalOptions="Center" Margin="100,0,100,0"/>
            <Entry x:Name="Email" Grid.Row="2" Placeholder="Email"/>
            <Entry x:Name ="Pass" Grid.Row="3" Placeholder="Contraseña" IsPassword="True"/>
            <Button Grid.Row="4" Text="Login" TextColor="White" BackgroundColor="Red"  HorizontalOptions="FillAndExpand" Clicked="Login_Click" />
            <Button Grid.Row="5" Text="Registro" TextColor="Red" Clicked="Registro_Click"/>
        </Grid>
        
        
    </ContentPage>

    <ContentPage Title="Home" >
        
    </ContentPage>

</TabbedPage>