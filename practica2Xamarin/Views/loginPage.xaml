<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="practica2Xamarin.Views.LoginPage"
            xmlns:viewModels="clr-namespace:practica2Xamarin.ViewModels"
            BarBackground="Red">
             
  <!--Pages can be added as references or inline-->
    <ContentPage Title="Login" >
        <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto" ColumnDefinitions="*" VerticalOptions="Center">
            <Image Source="LogoIntec" Grid.Row="1" HorizontalOptions="Center" Margin="100,0,100,0"/>
            <Entry Text="{Binding Email}" Grid.Row="2" Placeholder="Email"/>
            <Entry Text="{Binding Password}" Grid.Row="3" Placeholder="Contraseña" IsPassword="True" />
            <Button Grid.Row="4" Text="Login" TextColor="White" BackgroundColor="Red"  HorizontalOptions="FillAndExpand" Command="{Binding LoginCommand}" />
            <Button Grid.Row="5" Text="Registro" TextColor="Red" Command="{Binding RegisterCommand}"/>
        </Grid>
        
    </ContentPage>

</TabbedPage>